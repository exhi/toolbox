{
  "name": "toolbox",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "webpack --env.prodBuild",
    "buildAndAnalyze": "webpack --env.prodBuild --env.analyzeBundles",
    "typecheck": "tsc",
    "hoistVer": "cat node_modules/@xh/hoist/package.json | grep version",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint \"**/*.s?(a|c)ss\"",
    "refreshHoist": "echo 'This script has been removed - run `yarn upgrade` instead to get the latest snapshot.'",
    "start": "yarn install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server",
    "startOnDevice": "yarn install && webpack-dev-server --env.inlineHoist --env.devHost=$(hostname)",
    "startAndAnalyze": "yarn install && webpack-dev-server --env.analyzeBundles",
    "startWithHoist": "cd ../../hoist-react && yarn install && cd ../toolbox/client-app && yarn install && cross-env NODE_OPTIONS=--max_old_space_size=3072 webpack-dev-server --env.inlineHoist"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint",
    "*.s?(a|c)ss": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@xh/hoist": "^29.0.0-SNAPSHOT",
    "react": "~16.8.6",
    "react-dom": "~16.8.6",
    "react-dom-factories": "~1.0.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.7.7",
    "cross-env": "~6.0.0",
    "husky": "~3.1.0",
    "lint-staged": "~9.5.0",
    "stylelint": "~12.0.0",
    "stylelint-config-standard": "~19.0.0",
    "stylelint-scss": "~3.13.0",
    "typescript": "^3.7.4",

    "@babel/core": "~7.7.7",
    "@babel/plugin-proposal-class-properties": "~7.7.4",
    "@babel/plugin-proposal-decorators": "~7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "~7.7.4",
    "@babel/plugin-proposal-optional-chaining": "~7.7.5",
    "@babel/preset-env": "~7.7.7",
    "@babel/preset-react": "~7.7.4",
    "@types/lodash": "~4.14.149",
    "@types/react": "~16.9.17",
    "@xh/eslint-config": "~2.2.0",
    "autoprefixer": "~9.7.3",
    "babel-loader": "~8.0.6",
    "babel-plugin-transform-imports": "~2.0.0",
    "case-sensitive-paths-webpack-plugin": "~2.2.0",
    "clean-webpack-plugin": "~3.0.0",
    "css-loader": "~3.4.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "favicons-webpack-plugin": "~1.0.2",
    "file-loader": "~5.0.2",
    "html-webpack-plugin": "~3.2.0",
    "lodash": "~4.17.15",
    "mini-css-extract-plugin": "~0.9.0",
    "node-sass": "~4.13.0",
    "postcss-flexbugs-fixes": "~4.1.0",
    "postcss-loader": "~3.0.0",
    "rimraf": "~3.0.0",
    "sass-loader": "~8.0.0",
    "sass-material-colors": "~0.0.5",
    "style-loader": "~1.1.2",
    "terser-webpack-plugin": "~2.3.1",
    "url-loader": "~3.0.0",
    "webpack": "~4.41.4",
    "webpack-bundle-analyzer": "~3.6.0",
    "webpack-cli": "~3.3.10",
    "webpack-dev-server": "~3.10.1",
    "webpackbar": "~4.0.0"
  }
}
